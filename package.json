{
  "name": "personal-notion",
  "version": "1.0.0",
  "description": "Personal knowledge management app",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "set CSC_IDENTITY_AUTO_DISCOVERY=false && electron-builder"
  },
  "build": {
    "appId": "com.personal.notion",
    "productName": "Personal Notion",
    "win": {
      "target": "dir",
      "icon": "public/icon.png"
    },
    "files": [
      "src/**/*",
      "data/**/*",
      "package.json"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3",
    "jimp": "^1.6.0",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
